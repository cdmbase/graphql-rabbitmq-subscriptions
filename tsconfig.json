{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noLib": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}